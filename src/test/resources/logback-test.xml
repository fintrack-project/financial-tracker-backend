<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Test-specific logging configuration -->
    
    <!-- Console appender for tests - matching main application format -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Root logger for tests - only show WARN and above for Spring -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Mute Spring framework logs during tests -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.boot" level="WARN"/>
    <logger name="org.springframework.data" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.springframework.kafka" level="WARN"/>
    <logger name="org.springframework.orm" level="WARN"/>
    <logger name="org.springframework.transaction" level="WARN"/>
    <logger name="org.springframework.context" level="WARN"/>
    <logger name="org.springframework.beans" level="WARN"/>
    <logger name="org.springframework.core" level="WARN"/>
    <logger name="org.springframework.util" level="WARN"/>
    <logger name="org.springframework.test" level="WARN"/>

    <!-- Mute Hibernate logs during tests -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>

    <!-- Mute JDBC logs during tests -->
    <logger name="org.springframework.jdbc" level="WARN"/>
    <logger name="org.springframework.jdbc.datasource" level="WARN"/>
    <logger name="org.springframework.jdbc.datasource.datasourceutils" level="WARN"/>

    <!-- Mute HikariCP logs during tests -->
    <logger name="com.zaxxer.hikari" level="WARN"/>

    <!-- Keep FinTrack application logs at INFO level -->
    <logger name="com.fintrack" level="INFO"/>

    <!-- Keep test logs at INFO level -->
    <logger name="org.junit" level="INFO"/>
    <logger name="org.junit.jupiter" level="INFO"/>
    <logger name="org.junit.platform" level="INFO"/>
</configuration> 